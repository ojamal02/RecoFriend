<div class="container">
    <h1 class="titlecard"><span><%=@list.title%></span></h1>
</div>

<br></br>

<div class="row">
  <div class="large-2 columns"></div>
  <div class="large-8 large-centered columns">
    <div class="mainbox">
     <h3 class="name_tag"><%= @list.user.name %></h3>
     <h6 class="titlehead"><%=@list.title%></h6>
     <h6><%=@list.body%></h6>
    </div>
  </div>
  <div class="large-2 columns"></div>
</div>

<br></br>

<div class="row">
  <div class="large-3 columns"></div>
  <div class="large-6 large-centered columns">
    <% unless @list.suggestions.empty? %>
      <% @list.suggestions.each do |suggestion| %>
      <div class="mainbox2">
        <h3 class="name_tag"><%= suggestion.user.name %></h3>
        <h6 class="titlehead"><%= suggestion.show_name %></h6>
        <h6><%= suggestion.description %></h6>
      </div><br>
      <% end %>
    <% end %>
  </div>
  <div class="large-3 columns"></div>
</div>

<br></br>
