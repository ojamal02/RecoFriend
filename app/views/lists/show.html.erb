<div class="row">
  <div class="large-4 columns"></div>
  <div class="large-4 large-centered columns">
    <div class="mainbox">
      <p><%=link_to "Add a Suggestion", new_list_suggestion_path(@list)%></p>
      <p>Share to  <%= render_shareable :static_link => true , :buttons=> ['twitter','reddit'] %></p>
    </div>
  </div>
  <div class="large-4 columns"></div>
</div>
